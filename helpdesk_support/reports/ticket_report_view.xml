<odoo>

    <template id="help_ticket_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2>
                            <b>
                                <center>Image</center>
                                <center>Related Image</center>

                                <center><img t-att-src="image_data_uri(o.image)"/></center>

                            </b>
                        </h2>


                    </div>

            </t>
        </t>
    </template>
